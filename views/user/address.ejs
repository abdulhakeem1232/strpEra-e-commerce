    <!-- Profile Navigation Bar -->
   <!-- Profile Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white mb-1 font-weight-bold">
    <div class="container">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" href="/profile">User Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/address">Addresses</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/changepassword">Change Password</a>
            </li>
        </ul>
    </div>
</nav>


    <!-- Profile Section -->
    <section class="profile-section ">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="text-center">User Address</h3>

                    <% if (userData && userData.address) { %>
                        <div class="container">
                            <% userData.address.forEach((address, index) => { %>
                                <div class="card mt-3">
                                    <h5 class="card-header">Address <%= index + 1 %></h5>
                                    <div class="card-body">
                                        <h5 class="card-title">Street: <%= address.street %></h5>
                                        <p class="card-text">City: <%= address.city %></p>
                                        <p class="card-text">State: <%= address.state %></p>
                                        <p class="card-text">Zip Code: <%= address.pincode %></p>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <p>No addresses found for this user.</p>
                    <% } %>
                    <a href="addAddress" class="btn btn-primary btn-md ml-3">Add Address</a>
                    
                    


                    

                </div>
            </div>
        </div>
    </section>

    

</div>



