<div class="container mt-5 shadow p-1 mb-1 bg-white rounded">

<nav class="navbar navbar-expand-lg navbar-light bg-white mb-1 font-weight-bold">
    <div class="container">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" href="/profile">User Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/address">Addresses</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" href="/changepassword">Change Password</a>
            </li>
        </ul>
    </div>
</nav>


    <!-- Profile Section -->
    <section class="profile-section ">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="text-center">Edit Address</h3>
                    <form action="/addressUpdated/<%= adress.address[0]._id %>" method="post">
                        <div id="user-details" class="pt-4 border rounded p-4 text-dark">
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="name" class="h5 font-weight-bold mb-3">Name:</label>
                                        <input type="text" id="name" name="name" class="form-control" required value="<%= adress.address[0].name %>">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="mobile" class="h5 font-weight-bold mb-3">Mobile No:</label>
                                        <input type="tel" id="mobile" name="mobile" class="form-control" required value="<%= adress.address[0].mobile %>">
                                    </div>
                                </div>
                            </div>
                    
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="email" class="h5 font-weight-bold mb-3">E-mail:</label>
                                        <input type="email" id="email" name="email" class="form-control" required value="<%= adress.address[0].email %>" readonly>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="housename" class="h5 font-weight-bold mb-3">House Name:</label>
                                        <input type="text" id="housename" name="housename" class="form-control" required value="<%= adress.address[0].houseName %>">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="email" class="h5 font-weight-bold mb-3">Street:</label>
                                        <input type="text" id="email" name="street" class="form-control" required value="<%= adress.address[0].street %>">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="housename" class="h5 font-weight-bold mb-3">City:</label>
                                        <input type="text" id="housename" name="city" class="form-control" required value="<%= adress.address[0].city %>">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="email" class="h5 font-weight-bold mb-3">State:</label>
                                        <input type="text" id="email" name="state" class="form-control" required value="<%= adress.address[0].state %>">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="housename" class="h5 font-weight-bold mb-3">Country:</label>
                                        <input type="text" id="housename" name="country" class="form-control" required value="<%= adress.address[0].country %>">
                                    </div>
                                </div>
                            </div>
                    
                            
                    
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="pincode" class="h5 font-weight-bold mb-3">Pincode:</label>
                                        <input type="text" id="pincode" pattern="\d{6}" title="Please enter a 6-digit PIN code" name="pincode" class="form-control" required  value="<%= adress.address[0].pincode %>">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="saveas" class="h5 font-weight-bold mb-3">Save Name:</label>
                                        <input type="text" id="saveas" name="saveas" class="form-control" placeholder="eg: Home Address" value="<%= adress.address[0].save_as %>">
                                    </div>
                                </div>
                            </div>
                        </div>
                    
                        <button class="btn btn-success text-light ml-4">Save</button>
                    </form>
                    
                </div>
            </div>
        </div>
    </section>


</div>



</body>

