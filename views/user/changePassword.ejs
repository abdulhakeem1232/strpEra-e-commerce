    <!-- Profile Section -->
    <section class="profile-section ">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="text-center">Change Password</h3>
                    <form action="/passwordUpdating" method="post">
                    <div id="user-details" class="pt-4 border rounded p-4 text-dark">
                        
                        <!-- User details will be displayed here using EJS tags -->
                        <p class="user-detail h5 font-weight-bold mb-3">Current Password: </p><input type="password" name="pass" required>
                        <% if (expressFlash && expressFlash.pass && expressFlash.pass.length > 0) { %>
                            <div class="error-message">
                                <%= expressFlash.pass[0] %>
                            </div>
                        <% } %>
                        <p class="user-detail h5 font-weight-bold mb-3">New Password: </p><input type="password" name="npass" required>
                        <% if (expressFlash && expressFlash.npass && expressFlash.npass.length > 0) { %>
                            <div class="error-message">
                                <%= expressFlash.npass[0] %>
                            </div>
                        <% } %>
                        <p class="user-detail h5 font-weight-bold mb-3">Confrim Password:</p><input type="password"name="cpass" required>
                        <% if (expressFlash && expressFlash.cpass && expressFlash.cpass.length > 0) { %>
                            <div class="error-message">
                                <%= expressFlash.cpass[0] %>
                            </div>
                        <% } %>
                        <!-- Add other user details here -->
                    </div>
					 
               
                    
                    <button class="btn btn-success text-light ml-4">Update</button>
                </form>
                </div>
            </div>
        </div>
    </section>


</div>



